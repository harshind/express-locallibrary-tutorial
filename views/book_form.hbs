<h1>{{title}}</h1>
<form method="Post" action="">
    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" class="form-control" type="text" placeholder='Name of book' name='title' required='true' {{#if (ifEquality undefined book)}} value=""{{else}} value="{{book.title}}"{{/if}} />
    </div>
    <div class="form-group">
         <label for="author">Author:</label>
         <select id="author" class="form-control" type='select', placeholder='Select author' name='author' required='true' >
             {{#each authors}}
             {{#if book}}
             <option value="{{this._id}}"{{#if (ifEquality this._id book.author._id)}}selected="selected"{{/if}}{{#if (ifEquality this._id book.author)}} selected="selected"{{else}} selected="false"{{/if}}>{{this.name}}</option>
             {{else}}
             <option value="{{this._id}}">{{this.name}}</option>
             {{/if}}
             {{/each}}
         </select>
    </div>
    <div class="form-group">
        <label for="summary">Summary:</label>
        <textarea id="summary" class="form-control" type='textarea', placeholder='Summary' name='summary' rows='3' required='true'>
            {{#if (ifEquality undefined book)}}{{else}}{{book.summary}}{{/if}}
        </textarea>
    </div>
    <div class="form-group">
        <label for="isbn">ISBN:</label>
        <input id="isbn" class="form-control" type='text', placeholder='ISBN13' name='isbn' required="true" {{#if (ifEquality undefined book)}} value=""{{else}}value="{{book.isbn}}"{{/if}}/>
    </div>
    <div class="form-group">
        <label>Genre:</label>
        <div>
            {{#each genres}}
            <div style='display: inline; padding-right:10px;'>
                <input class="checkbox-input" type='checkbox', name='genre', id={{this._id}}, value={{this._id}}, checked={{this.checked}}/>
                <label for="{{this._id}}">{{this.name}}</label>
            {{/each}}
            </div>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>
{{#if errors}}
<ul>
    {{#each errors}}
    <li>{{this.msg}}</li>
    {{/each}}
</ul>
{{/if}}