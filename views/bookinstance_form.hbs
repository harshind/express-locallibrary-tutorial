<h1>{{title}}</h1>
<form method='POST' action=''>
    <div class="form-group">
        <label for='book'> Book:</label>
        <select id="book" class="form-control" type='select' placeholder='Select book' name='book' required='true'>
            {{#each book_list}}
            {{#if bookinstance}}
            <option value="{{this._id}}" {{#if (ifEquality bookinstance.book this._id)}}selected="selected"{{else}}selected="false"{{/if}}>{{this.title}}</option>
            {{else}}
            <option value="{{this._id}}">{{this.title}}</option>
            {{/if}}
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for='imprint'>Imprint:</label>
        <input id="imprint" class="form-control" type='text' placeholder='Publisher and date information' name='imprint' required='true' {{#if (ifEquality undefined bookinstance)}} value=""{{else}}value="{{bookinstance.imprint}}"{{/if}}/>
    </div>
    <div class="form-group">
        <labe for='due_back'l>Date when book available:</label>
        <input id="due_back" class="form-control" type='date' name='due_back' {{#if (ifEquality undefined bookinstance)}} value=""{{else}}value="{{bookinstance.due_back}}"{{/if}}/>
    </div>
    <div class="form-group">
        <label for='status'>Status:</label>
        <select id="status" class="form-control" type='select' placeholder='Select status' name='status' required='true'>
            <option value='Maintenance'>Maintenance</option>
            <option value='Available'>Available</option>
            <option value='Loaned'>Loaned</option>
            <option value='Reserved'>Reserved</option>
        </select>
    </div>
    <button class="btn btn-primary" type='submit'>Submit</button>
</form>

{{#if errors}}
<ul>
    {{#each errors}}
    <li>{{this.msg}}</li>
    {{/each}}
</ul>
{{/if}}